{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "C/C++: g++.exe compilar archivo activo",
        "type": "shell",
        "command": "C:/MinGW/bin/g++.exe",
        "args": [
          "-fdiagnostics-color=always",
          "-g",
          "${file}",
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}.exe"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$gcc"],
        "detail": "Compilaci√≥n generada por VS Code."
      }
    ]
  }
  